// NexusPay Database Schema â€” MongoDB with Prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// Mongo rules:
// - Use String ids mapped to Mongo _id with @db.ObjectId and @default(auto())
// - No autoincrement. Replace with app-managed counters if needed.
// - Relations are logical only. Mongo doesn't enforce FKs.

// User model with encrypted PII fields
model User {
  id                     String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt

  // Encrypted PII fields
  fullNameEncrypted      String
  saIdEncrypted          String
  accountNumberEncrypted String
  emailEncrypted         String?

  // Non-PII fields
  passwordHash           String
  role                   String   @default("customer")
  isActive               Boolean  @default(true)
  failedLoginAttempts    Int      @default(0)
  lockedUntil            DateTime?

  // Relations (logical)
  sessions         UserSession[]
  payments         Payment[]
  securityEvents   SecurityEvent[]
  verifiedPayments Payment[]      @relation("StaffVerifier")
  beneficiaries    Beneficiary[]

  @@map("users")
  @@index([role])
  @@index([isActive])
}

// User session management
model UserSession {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  userId           String   @db.ObjectId
  refreshTokenHash String
  deviceInfo       String?
  ipAddress        String?
  userAgent        String?
  isActive         Boolean  @default(true)
  expiresAt        DateTime
  createdAt        DateTime @default(now())

  user User @relation(fields: [userId], references: [id])

  @@map("user_sessions")
  @@index([userId])
  @@index([isActive, expiresAt])
}

// CSRF token management
model CsrfToken {
  token     String   @id @map("_id")   // <- add @map("_id")
  userId    String?  @db.ObjectId
  ipAddress String?
  createdAt DateTime @default(now())
  expiresAt DateTime

  @@map("csrf_tokens")
  @@index([userId])
  @@index([expiresAt])
}


// Login attempt tracking
model LoginAttempt {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier    String
  ipAddress     String
  userAgent     String?
  success       Boolean
  failureReason String?
  createdAt     DateTime @default(now())

  @@map("login_attempts")
  @@index([identifier, createdAt])
  @@index([success])
}

// Security event logging
model SecurityEvent {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String?  @db.ObjectId
  eventType   String
  description String
  ipAddress   String?
  userAgent   String?
  metadata    String?  // JSON as string or switch to Json if you prefer
  createdAt   DateTime @default(now())

  user User? @relation(fields: [userId], references: [id])

  @@map("security_events")
  @@index([userId, createdAt])
  @@index([eventType])
}

// Immutable audit entries
model ImmutableAuditEntry {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  sequenceNumber Int      @unique            // app must assign; no autoincrement in Mongo
  userId         String?  @db.ObjectId
  eventType      String
  eventData      String
  entityId       String?
  entityType     String?
  ipAddress      String?
  userAgent      String?
  riskLevel      String
  hash           String
  previousHash   String?
  metadata       String?
  timestamp      DateTime @default(now())

  @@map("immutable_audit_entries")
  @@index([userId, timestamp])
  @@index([entityType, entityId])
}

// Payment model
model Payment {
  id                    String   @id @default(auto()) @map("_id") @db.ObjectId
  userId                String   @db.ObjectId
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  amount                Float
  currency              String
  provider              String   @default("SWIFT")
  idempotencyKey        String   @unique

  reference             String?
  purpose               String?

  beneficiaryName           String?
  beneficiaryBank           String?
  swiftCode                 String?
  beneficiaryAccountNumber  String?
  iban                      String?
  bankAddress               String?
  bankCity                  String?
  bankPostalCode            String?
  bankCountry               String?

  status               String   @default("draft")
  staffVerifiedBy      String?  @db.ObjectId
  staffVerifiedAt      DateTime?
  submittedToSwiftAt   DateTime?
  completedAt          DateTime?

  user           User  @relation(fields: [userId], references: [id])
  staffVerifier  User? @relation("StaffVerifier", fields: [staffVerifiedBy], references: [id])

  @@map("payments")
  @@index([userId, status])
  @@index([createdAt])
}

// Beneficiary model
model Beneficiary {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  userId        String   @db.ObjectId
  fullName      String
  bankName      String
  accountNumber String
  swiftCode     String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])

  @@map("beneficiaries")
  @@index([userId])
  @@index([fullName])
}

// Performance metrics
model PerformanceMetric {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  endpoint     String
  method       String
  responseTime Int
  statusCode   Int
  timestamp    DateTime @default(now())

  @@map("performance_metrics")
  @@index([timestamp])
  @@index([endpoint, method])
}

// System health checks
model HealthCheck {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  service      String
  status       String
  responseTime Int?
  error        String?
  timestamp    DateTime @default(now())

  @@map("health_checks")
  @@index([service, timestamp])
}

// OTP codes
model OtpCode {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String?  @db.ObjectId
  email     String
  code      String
  purpose   String   @default("login")
  expiresAt DateTime
  verified  Boolean  @default(false)
  createdAt DateTime @default(now())

  @@map("otp_codes")
  @@index([email])
  @@index([purpose, verified])
  @@index([expiresAt])
}
