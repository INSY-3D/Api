// NexusPay Database Schema â€” MongoDB with Prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// Mongo rules:
// - Use String ids mapped to Mongo _id with @db.ObjectId and @default(auto())
// - No autoincrement. Replace with app-managed counters if needed.
// - Relations are logical only. Mongo doesn't enforce FKs.

// User model with encrypted PII fields
model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Encrypted PII fields
  fullNameEncrypted      String
  saIdEncrypted          String
  accountNumberEncrypted String
  emailEncrypted         String?

  // Non-PII fields
  passwordHash        String
  role                String    @default("customer")
  isActive            Boolean   @default(true)
  failedLoginAttempts Int       @default(0)
  lockedUntil         DateTime?

  // Relations (logical)
  sessions         UserSession[]
  payments         Payment[]
  securityEvents   SecurityEvent[]
  verifiedPayments Payment[]       @relation("StaffVerifier")
  beneficiaries    Beneficiary[]

  @@index([role])
  @@index([isActive])
  @@map("users")
}

// User session management
model UserSession {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  userId           String   @db.ObjectId
  refreshTokenHash String
  deviceInfo       String?
  ipAddress        String?
  userAgent        String?
  isActive         Boolean  @default(true)
  expiresAt        DateTime
  createdAt        DateTime @default(now())

  user User @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([isActive, expiresAt])
  @@map("user_sessions")
}

// CSRF token management
model CsrfToken {
  token     String   @id @map("_id") // <- add @map("_id")
  userId    String?  @db.ObjectId
  ipAddress String?
  createdAt DateTime @default(now())
  expiresAt DateTime

  @@index([userId])
  @@index([expiresAt])
  @@map("csrf_tokens")
}

// Login attempt tracking
model LoginAttempt {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier    String
  ipAddress     String
  userAgent     String?
  success       Boolean
  failureReason String?
  createdAt     DateTime @default(now())

  @@index([identifier, createdAt])
  @@index([success])
  @@map("login_attempts")
}

// Security event logging
model SecurityEvent {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String?  @db.ObjectId
  eventType   String
  description String
  ipAddress   String?
  userAgent   String?
  metadata    String? // JSON as string or switch to Json if you prefer
  createdAt   DateTime @default(now())

  user User? @relation(fields: [userId], references: [id])

  @@index([userId, createdAt])
  @@index([eventType])
  @@map("security_events")
}

// Immutable audit entries
model ImmutableAuditEntry {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  sequenceNumber Int      @unique // app must assign; no autoincrement in Mongo
  userId         String?  @db.ObjectId
  eventType      String
  eventData      String
  entityId       String?
  entityType     String?
  ipAddress      String?
  userAgent      String?
  riskLevel      String
  hash           String
  previousHash   String?
  metadata       String?
  timestamp      DateTime @default(now())

  @@index([userId, timestamp])
  @@index([entityType, entityId])
  @@map("immutable_audit_entries")
}

// Payment model
model Payment {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  amount         Float
  currency       String
  provider       String @default("SWIFT")
  idempotencyKey String @unique

  reference String?
  purpose   String?

  beneficiaryName          String?
  beneficiaryBank          String?
  swiftCode                String?
  beneficiaryAccountNumber String?
  iban                     String?
  bankAddress              String?
  bankCity                 String?
  bankPostalCode           String?
  bankCountry              String?

  status             String    @default("draft")
  staffVerifiedBy    String?   @db.ObjectId
  staffVerifiedAt    DateTime?
  submittedToSwiftAt DateTime?
  completedAt        DateTime?

  user          User  @relation(fields: [userId], references: [id])
  staffVerifier User? @relation("StaffVerifier", fields: [staffVerifiedBy], references: [id])

  @@index([userId, status])
  @@index([createdAt])
  @@map("payments")
}

// Beneficiary model
model Beneficiary {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  userId        String   @db.ObjectId
  fullName      String
  bankName      String
  accountNumber String
  swiftCode     String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([fullName])
  @@map("beneficiaries")
}

// Performance metrics
model PerformanceMetric {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  endpoint     String
  method       String
  responseTime Int
  statusCode   Int
  timestamp    DateTime @default(now())

  @@index([timestamp])
  @@index([endpoint, method])
  @@map("performance_metrics")
}

// System health checks
model HealthCheck {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  service      String
  status       String
  responseTime Int?
  error        String?
  timestamp    DateTime @default(now())

  @@index([service, timestamp])
  @@map("health_checks")
}

// OTP codes
model OtpCode {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String?  @db.ObjectId
  email     String
  code      String
  purpose   String   @default("login")
  expiresAt DateTime
  verified  Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([email])
  @@index([purpose, verified])
  @@index([expiresAt])
  @@map("otp_codes")
}
